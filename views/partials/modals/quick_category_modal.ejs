<!-- Modal Rápido Categoria -->
<div id="quickCategoryModal" class="hidden fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-[60] flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl w-full max-w-sm shadow-2xl overflow-hidden">
        <div class="p-4 border-b border-slate-100 flex justify-between items-center">
            <h3 class="font-bold text-slate-900">Nova Categoria</h3>
            <button onclick="toggleModal('quickCategoryModal')" class="text-slate-400 hover:text-slate-600">×</button>
        </div>
        <form id="quickCategoryForm" onsubmit="submitQuickCategory(event)" class="p-4 space-y-4">
            <input type="text" name="name" placeholder="Nome da Categoria" required class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all">
            <input type="color" name="color" class="h-10 w-full rounded-xl border border-slate-200 cursor-pointer">
            <button type="submit" class="w-full bg-food-orange text-white py-2 rounded-xl font-bold hover:bg-orange-600 transition-all">Salvar</button>
        </form>
    </div>
</div>
