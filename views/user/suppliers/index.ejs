<div class="flex justify-between items-center mb-8">
    <div>
        <h1 class="text-2xl font-bold text-slate-900">Fornecedores</h1>
        <p class="text-slate-500 text-sm mt-1">Gerencie seus parceiros comerciais</p>
    </div>
    <div>
        <button onclick="toggleModal('supplierModal')" class="px-6 py-2 bg-food-orange text-white rounded-lg text-sm font-bold hover:bg-orange-600 transition-colors shadow-lg shadow-orange-500/20">
            Novo Fornecedor
        </button>
    </div>
</div>

<div class="bg-white rounded-3xl border border-slate-200 overflow-hidden shadow-sm">
    <table class="w-full text-left border-collapse">
        <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
                <th class="px-6 py-4 text-slate-500 font-semibold text-xs uppercase">Nome</th>
                <th class="px-6 py-4 text-slate-500 font-semibold text-xs uppercase">CNPJ</th>
                <th class="px-6 py-4 text-slate-500 font-semibold text-xs uppercase">Contato</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            <% if (suppliers.length > 0) { %>
                <% suppliers.forEach(supplier => { %>
                    <tr class="hover:bg-slate-50/50 transition-colors">
                        <td class="px-6 py-4 font-medium text-slate-900"><%= supplier.name %></td>
                        <td class="px-6 py-4 text-slate-500 text-sm"><%= supplier.cnpj || '-' %></td>
                        <td class="px-6 py-4 text-slate-500 text-sm">
                            <div class="flex flex-col">
                                <span><%= supplier.email || '-' %></span>
                                <span class="text-xs text-slate-400"><%= supplier.phone || '-' %></span>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="px-6 py-12 text-center text-slate-400">Nenhum fornecedor cadastrado.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Modal Novo Fornecedor -->
<div id="supplierModal" class="hidden fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl w-full max-w-lg shadow-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100 flex justify-between items-center">
            <h2 class="text-xl font-bold text-slate-900">Novo Fornecedor</h2>
            <button onclick="toggleModal('supplierModal')" class="text-slate-400 hover:text-slate-600">Ã—</button>
        </div>
        <form action="/app/suppliers" method="POST" class="p-6 grid grid-cols-2 gap-4">
            <div class="col-span-2">
                <label class="block text-sm font-semibold text-slate-700 mb-1">Nome da Empresa</label>
                <input type="text" name="name" required class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all">
            </div>
            <div class="col-span-2">
                <label class="block text-sm font-semibold text-slate-700 mb-1">CNPJ</label>
                <input type="text" name="cnpj" class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all">
            </div>
            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-1">E-mail</label>
                <input type="email" name="email" class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all">
            </div>
            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-1">Telefone</label>
                <input type="text" name="phone" class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all">
            </div>
            <div class="col-span-2 pt-4">
                <button type="submit" class="w-full bg-food-orange text-white py-3 rounded-xl font-bold hover:bg-orange-600 shadow-lg shadow-orange-500/20 transition-all">Salvar Fornecedor</button>
            </div>
        </form>
    </div>
</div>

<script>
    function toggleModal(id) {
        document.getElementById(id).classList.toggle('hidden');
    }
</script>
