<div class="mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">Meu Perfil</h1>
        <p class="text-slate-500 mt-1">
            Gerencie suas informações pessoais e foto de perfil de forma rápida e segura.
        </p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-6 p-4 bg-red-50 border border-red-100 text-red-600 rounded-2xl flex items-center gap-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-medium"><%= error %></span>
        </div>
    <% } %>

    <form
        action="/app/profile"
        method="POST"
        enctype="multipart/form-data"
    >
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 items-start">
            <!-- Coluna da Foto -->
            <div class="flex flex-col items-center lg:items-start gap-4 rounded-2xl border border-slate-200 shadow-sm p-4">
                <div class="relative group">
                    <label class="cursor-pointer block">
                        <div class="w-40 h-40 rounded-[2.5rem] bg-slate-100 border-4 border-white  overflow-hidden relative group-hover:ring-4 group-hover:ring-orange-500/10 transition-all duration-300 align-center">
                            <% if (user.avatar) { %>
                                <img
                                    id="avatar-preview"
                                    src="<%= user.avatar %>"
                                    class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                                    alt="Avatar"
                                >
                            <% } else { %>
                                <div
                                    id="avatar-placeholder"
                                    class="w-full h-full flex items-center justify-center bg-gradient-to-br from-orange-50 to-orange-100 text-food-orange font-bold text-5xl"
                                >
                                    <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                            <% } %>

                            <!-- Overlay -->
                            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center backdrop-blur-[2px]">
                                <div class="p-3 bg-white/20 rounded-2xl border border-white/30 text-white">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <input
                            type="file"
                            name="avatar"
                            class="hidden"
                            accept="image/*"
                            onchange="previewImage(this)"
                        >
                    </label>
                </div>
                <p class="text-xs text-slate-400 font-medium italic">Clique na imagem para alterar</p>
            </div>

            <!-- Coluna do Formulário -->
            <div class="lg:col-span-2">
                <div class="bg-white p-8 md:p-10 rounded-[2.5rem] border border-slate-100 shadow-sm">
                    <div class="space-y-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2">
                                <%- include('../partials/ui/input', {
                                    label: 'Nome Completo',
                                    name: 'name',
                                    value: user.name,
                                    placeholder: 'Ex: João Silva',
                                    required: true
                                }) %>
                            </div>

                            <div>
                                <%- include('../partials/ui/input', {
                                    label: 'E-mail',
                                    name: 'email',
                                    value: user.email,
                                    placeholder: 'seu@email.com',
                                    required: true
                                }) %>
                            </div>

                            <div>
                                <%- include('../partials/ui/input', {
                                    label: 'CPF / CNPJ',
                                    name: 'cpf_cnpj',
                                    value: user.cpf_cnpj || '',
                                    placeholder: '000.000.000-00'
                                }) %>
                            </div>
                        </div>

                        <div class="pt-8 border-t border-slate-50 flex justify-end">
                            <%- include('../partials/ui/button', {
                                text: 'Salvar Alterações',
                                type: 'submit',
                                variant: 'primary',
                                extraClasses: 'px-10 py-4 text-base'
                            }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                let preview = document.getElementById('avatar-preview');
                const placeholder = document.getElementById('avatar-placeholder');
                
                if (!preview && placeholder) {
                    const img = document.createElement('img');
                    img.id = 'avatar-preview';
                    img.src = e.target.result;
                    img.className = 'w-full h-full object-cover transition duration-500 group-hover:scale-110';
                    placeholder.parentNode.appendChild(img);
                    placeholder.remove();
                    preview = img;
                } else if (preview) {
                    preview.src = e.target.result;
                }
                
                window.notify('Prévia da imagem carregada!', 'info');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
