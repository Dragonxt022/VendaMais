<div class="flex justify-between items-center mb-8">
    <div>
        <h1 class="text-2xl font-bold text-slate-900">Categorias</h1>
        <p class="text-slate-500 text-sm mt-1">Organize seus produtos por departamento</p>
    </div>
    <div>
        <button onclick="toggleModal('categoryModal')" class="px-6 py-2 bg-food-orange text-white rounded-lg text-sm font-bold hover:bg-orange-600 transition-colors shadow-lg shadow-orange-500/20">
            Nova Categoria
        </button>
    </div>
</div>

<div class="bg-white rounded-3xl border border-slate-200 overflow-hidden shadow-sm">
    <table class="w-full text-left border-collapse">
        <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
                <th class="px-6 py-4 text-slate-500 font-semibold text-xs uppercase">Nome</th>
                <th class="px-6 py-4 text-slate-500 font-semibold text-xs uppercase">Descrição</th>
                <th class="px-6 py-4 text-slate-500 font-semibold text-xs uppercase">Cor</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            <% if (categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <tr class="hover:bg-slate-50/50 transition-colors">
                        <td class="px-6 py-4 font-medium text-slate-900"><%= category.name %></td>
                        <td class="px-6 py-4 text-slate-500 text-sm"><%= category.description || '-' %></td>
                        <td class="px-6 py-4">
                            <% if (category.color) { %>
                                <div class="w-6 h-6 rounded-full border border-slate-200" style="background-color: <%= category.color %>;"></div>
                            <% } else { %>
                                -
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="px-6 py-12 text-center text-slate-400">Nenhuma categoria cadastrada.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Modal Nova Categoria -->
<div id="categoryModal" class="hidden fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl w-full max-w-lg shadow-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100 flex justify-between items-center">
            <h2 class="text-xl font-bold text-slate-900">Nova Categoria</h2>
            <button onclick="toggleModal('categoryModal')" class="text-slate-400 hover:text-slate-600">×</button>
        </div>
        <form action="/app/categories" method="POST" class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-1">Nome</label>
                <input type="text" name="name" required class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all">
            </div>
            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-1">Descrição</label>
                <textarea name="description" rows="3" class="w-full px-4 py-2 rounded-xl border border-slate-200 outline-none focus:border-food-orange transition-all"></textarea>
            </div>
            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-1">Cor (Hex)</label>
                <input type="color" name="color" class="h-10 w-full rounded-xl border border-slate-200 cursor-pointer">
            </div>
            <div class="pt-4">
                <button type="submit" class="w-full bg-food-orange text-white py-3 rounded-xl font-bold hover:bg-orange-600 shadow-lg shadow-orange-500/20 transition-all">Salvar Categoria</button>
            </div>
        </form>
    </div>
</div>

<script>
    function toggleModal(id) {
        document.getElementById(id).classList.toggle('hidden');
    }
</script>
