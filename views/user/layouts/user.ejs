    <script>
        // Simple active state manager
        const currentPath = window.location.pathname;
        const links = document.querySelectorAll('nav a');
        
        links.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                // Remove default styling
                link.classList.remove('text-slate-500', 'hover:bg-slate-50');
                // Add active styling
                link.classList.add('text-food-orange', 'bg-orange-50', 'font-bold');
                
                // If inside details, open it
                const details = link.closest('details');
                if (details) {
                    details.open = true;
                    details.querySelector('summary').classList.add('text-food-orange', 'bg-orange-50/50');
                }
            }
        });
    </script>
